<div class="container">
  <h1><%= @cocktail.name %></h1>
  <h2>Ingredients</h2>
  <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>

  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %>
      <%= dose.ingredient.name %>
      <%= link_to "Delete ingredient", dose_path(dose), method: :delete, data: {confirm: "Are you sure?"} %>
    </li>
    <% end %>
  </ul>

  <hr>

  <p><%= link_to "Edit", edit_cocktail_path %></p>
  <p><%= link_to "Delete", cocktail_path(@cocktail), method: :delete, data: {confirm: "Are you sure?"} %></p>
  <%= link_to "Back to cocktails", cocktails_path %>
</div>

